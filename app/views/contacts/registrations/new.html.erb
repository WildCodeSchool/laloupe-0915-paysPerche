<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 session_bg">
      <h2> Nouveau contact </h2>
      <div class="style_form contact row">
      <%= form_for(resource, as: resource_name, url: create_contact_path(params[:id])) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-sm-offset-1 col-md-8 col-md-offset-2 custom_inline">
            <%= f.text_field :first_name, :placeholder => "Prénom", class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 custom_inline">
            <%= f.text_field :last_name, :placeholder => "Nom", class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class=" col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 custom_inline">
            <%= f.text_field :function, :placeholder => "Titre", class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class=" col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 custom_inline">
            <%= f.text_field :organisation, :placeholder => "Structure / Entreprise", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 custom_inline">
            <%= f.text_field :phone, :placeholder => "Téléphone", class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 custom_inline">
            <%= f.email_field :email, autofocus: true, :placeholder => "Mail", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 custom_inline">
            Acceptez-vous les CGU  ? <input type="checkbox" />
          </div>
        </div>

        <%= f.hidden_field :user_id, value: params[:id] %>
      <br>
        <div class="row">
          <div class="actions col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
            <%= f.submit "Enregistrer" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>