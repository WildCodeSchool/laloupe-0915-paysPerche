<h2> Nouveau contact </h2>
<div class="style_form contact row">
<%= form_for(resource, as: resource_name, url: create_contact_path(params[:id])) do |f| %>
  <%= devise_error_messages! %>
  <div class="field row">
    <i class="fa fa-user"></i><%= f.text_field :first_name, :placeholder => "Prénom" %>
  </div>
  <div class="field row">
    <i class="fa fa-user"></i><%= f.text_field :last_name, :placeholder => "Nom" %>
  </div>
  <div class="field row">
    <i class="fa fa-briefcase"></i><%= f.text_field :function, :placeholder => "Metier" %>
  </div>

  <div class="field row">
    <i class="fa fa-phone"></i><%= f.text_field :phone, :placeholder => "Téléphone" %>
  </div>

  <div class="field row">
    <i class="fa fa-envelope-o"></i><%= f.email_field :email, autofocus: true, :placeholder => "Mail" %>
  </div>

  <%= f.hidden_field :user_id, value: params[:id] %>
<br>
  <div class="actions">
    <%= f.submit "Enregistrer" %>
  </div>
</div>
<% end %>