<div class ="row margin_top">
  <div class="col-sm-12 col-md-12 main">
    <div class="panel panel-default">
      <div class="panel panel-head">
        <h3 style="text-align: center;"><%=@contact.first_name %> <%=@contact.last_name %></h3>
      </div>
      <div class="panel panel-body">
        <b><i class="fa fa-envelope-o"></i> <%=@contact.email %></b>
        <p><i class="fa fa-briefcase"></i> <%=@contact.function %></p>
        <p><i class="fa fa-building"></i> <%=@contact.organisation %></p>
      </div>
      <div class="panel panel-footer">
        <%= render "notes/notes" %>
        <%= render "notes/form" %>  
      </div>
    </div>
  </div>
</div>
