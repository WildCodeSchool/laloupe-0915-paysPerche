<%= form_for @contact do |f| %>
	<%= f.label 'Prénom' %>
	<%= f.text_field :first_name %><br><br>
	<%= f.label 'Nom' %>
	<%= f.text_field :last_name %><br><br>
	<%= f.label 'Fonction' %>
	<%= f.text_field :function %><br><br>
	<%= f.label 'N°tél' %>
	<%= f.text_field :phone %><br><br>
	<%= f.label 'Email' %>
	<%= f.email_field :email %><br><br>
	<%= f.hidden_field :user_id, value: params[:id] %>
	<%= f.hidden_field :password, value: '#{@string}' %>
	<%= f.submit 'Envoyer' %>
<% end %>